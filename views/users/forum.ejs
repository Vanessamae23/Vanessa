<% layout('layouts/boilerplate') %>
<div class="container mt-2 mb-2 col-12 d-flex flex-row-reverse">
    <a href="forum/new" class="btn btn-secondary">Add forum +</a>
</div>
<div class="container mt-2 mb-2 col-12">
    <% for(let forum of forums) { %> 
    <div class="card col-12 my-2">
        <div class="card-body">
          <h5 class="card-title"><%= forum.title %></h5>
          <p class="card-text text-muted">Grade: <%= forum.grade %> </p>
          <a href="/forum/<%= forum._id %>" class="btn btn-dark">See More</a>
        </div>
    </div>
    <% } %> 
</div>